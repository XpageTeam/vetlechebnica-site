header.head
	.head-top
		.wrapper
			.head-top__left
				.head-top__menu-list
					each title in ["О клиники", "Отдел ВСЭ", "Наши сотрудники", "Галерея"]
						.head-top__menu-item
							a.head-top__menu-link(href="#")=title
						


			.head-top__right
				.head-links
					.head-links__soc
						each title in ["vk", "twitter", "facebook"]
							a.soc__link(href="#" style="background-image: url('img/"+title+"-black.svg')")

					.head-links__phone
						address.top-phone
							a(href="tel: +7 (351) 214-14-14") +7 (351) 214-14-14
	.head-bot
		.wrapper
			.head-bot__left
				.main-logo
					.main-logo__img 
						img(src="img/logo-img-1.png", alt="")
					.main-logo__img
						img(src="img/logo-img-2.png", alt="")
					.main-logo__text Челябинская ветстанция
						div Областное государственное бюджетное учреждение
			.search
				a(href="#").ico-search
			.head-bot__right
				
				.main-nav
					.main-nav__list
						.main-nav__item
							a.main-nav__link(href="#") Наши услуги
						.main-nav__item
							a.main-nav__link.active(href="#") Интернет-магазин
						.main-nav__item
							a.main-nav__link(href="#") Новости
						.main-nav__item 
							a.main-nav__link(href="#") Консультация 
						.main-nav__item
							a.main-nav__link(href="#") Контакты
			.burger
				span
	.search__input-cont
		.wrapper
			form(action="")
				input.search__input(type="text")
				input.search__submit.ico-search(type="submit")