html
	head
		meta(charset="utf-8")
		title Главная
		include inc/head.jade
		include inc/css.jade
	body.main
		#page-wr
			.mobile-menu
			#content
				include inc/header.jade
				.content
					.main-slider__cont
						.main-slider
							- for (var i = 0; i < 4; i++)
								.main-slider__slide
									img.main-slider__slide-img(src="img/photos/main-slider-img.jpg", alt="")
									.main-slider__slide-title-cont
										.wrapper
											.main-slider__slide-title 4 октября<br> Всемирный день<br> защиты животных
											.main-slider__slide-btn
												a.btn.ico-btn(href="#") Подробнее
							.help
								.wrapper
									.help__list
										a.help__item.ico-pen Запись<br> на приём
										a.help__item.ico-question Часто задаваемые<br> вопросы
										a.help__item.ico-face Получить<br> консультацию
					.services
						.wrapper
							h2.title__block.services__title Наши услуги
							.services__list
								each title in ["Прейскурант", "Узи, Экг", "Лаборатория", "Рентген", "Скорая помощ", "Хирургия", "Физиотерапия", "Терапия"]
									a.services__item.ico-service(href="#")
										.services__item-text=title
							.services__more
								a.more__link(href="#") Все услуги
					.about-main(style="background-image: url('img/about-img.jpg')")
						.wrapper
							.about__info
								h2.title__block.about__title Челябинская ветеренарная<br> клиника
								.about__text В 2016 году более 48 тысяч клиентов выбрали наше учреждение  в качестве клиники, где они могут получить ветеринарную помощь для своих питомцев. Такое количество посетителей нас ко многому обязывает, поэтому в результате реконструкции и ремонта, проведенного в прошлом году наряду с задачами эстетического характера, мы постарались решить вопросы организации рабочего пространства и порядка осуществления амбулаторного приёма животных.
							.about__more
								a.more__link(href="#") О нас
					.specialist
						.wrapper
							h2.title__block.specialist__title Специалисты
							.specialist__slider
								.specislist__list
									- for (var i = 1; i <= 6; i++)
										a.specialist__item(href="#")
											div
												figure.specialist__img
													img(src="img/specialist-img.jpg", alt="")
												.specialist__info
													.specialist__name Кузовлев<br> Дмитрий Николаевич
													.specialist__prof хирург, заведующий хирургического кабинета
							.specialist__more
								a.more__link(href="#") Все специалисты
					.news-main
						.wrapper
							h2.title__block.news__title Новости
							.news__slider
								.news__list
									a.news__item(href="#")
										div
											figure.news__img
												img(src="img/photos/news-img-1.jpg", alt="")
											.news__info
												.news__data 27.09.2017
												.news__text Обнаружена мутация, сделавшая птичий грипп опасным для людей
									a.news__item(href="#")
										div
											figure.news__img
												img(src="img/photos/news-img-2.jpg", alt="")
											.news__info
												.news__data 27.09.2017
												.news__text Могут ли животные мстить человеку?
									a.news__item(href="#")
										div
											figure.news__img
												img(src="img/photos/news-img-3.jpg", alt="")
											.news__info
												.news__data 27.09.2017
												.news__text Mars открывает первый в Москве офис, куда можно приходить с домашними животными
									a.news__item(href="#")
										div
											figure.news__img
												img(src="img/photos/news-img-3.jpg", alt="")
											.news__info
												.news__data 27.09.2017
												.news__text Mars открывает первый в Москве офис, куда можно приходить с домашними животными
							.news__more
								a.more__link.ico-btn(href="#") Все новости
					.city-area
						.wrapper
							ol.city-area__list
								li.city-area__item(data-id="cur")
									.city-area__info
										.city-area__title Курчатовский район
										.city-area__address г. Челябинск Пржевальского, 2<br> Остановка «Ветлечебница»
										a.city-area__link(href="#") Подробнее
									span.gorizont-line
									span.rotate-line.rotate-line--cur
								li.city-area__item(data-id="met")
									.city-area__info
										.city-area__title Металлургический район
										.city-area__address Свердловский тракт, 18а<br> Пржевальского, 2 <br> Остановка «Досуговый центр «Импульс» 
										a.city-area__link(href="#") Подробнее
									span.gorizont-line
									span.rotate-line.rotate-line--met
								li.city-area__item(data-id="tr")
									.city-area__info
										.city-area__title Тракторозаводский район
										.city-area__address Марченко, 7в<br> Остановка «Танкистов (ул. Кулибина)» 
										a.city-area__link(href="#") Подробнее
									span.gorizont-line
									span.rotate-line.rotate-line--tr
							.city-map
								.map-interaktiv
									include ../img/map.svg



					
			include inc/footer.jade
		include inc/scripts.jade